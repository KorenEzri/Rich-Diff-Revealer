{
  "name": "Show That Diff",
  "description": "Awesome Diff Tool by KBE with React and TS",
  "manifest_version": 2,
  "version": "2.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "*://github.com/*/*",
    "https://render.githubusercontent.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://render.githubusercontent.com/*", "http://127.0.0.1:5500/showThatDiff/src/tests/testing.html"],
      "js": ["content.js"]
    }, {
      "matches": ["https://render.githubusercontent.com/*"],
      "js": ["iframe-content.js"]
    }
  ]
}
